<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="30dp"

    android:layout_height="wrap_content">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/com_facebook_button_login_silver_background_color"
        >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="@color/com_facebook_share_button_text_color"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout_creator">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/awesome"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Kuray ÖĞÜN"
                android:id="@+id/creator_name"
                android:textColor="@color/primary_text_green"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:layout_marginStart="23dp"
                android:layout_alignTop="@+id/logo"
                android:layout_toEndOf="@+id/logo"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Founder - Developer - Dreamer"
                android:textColor="@color/myGrey"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textSize="10sp"
                android:id="@+id/job_name"
                android:layout_below="@+id/creator_name"
                android:layout_alignStart="@+id/creator_name" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/github_logo"
                android:background="@drawable/ic_github_black"
                android:layout_alignTop="@+id/job_name"
                android:layout_alignStart="@+id/twitter_Logo" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/linked_in"
                android:background="@drawable/ic_linkedin_black"
                android:layout_alignBottom="@+id/github_logo"
                android:layout_alignStart="@+id/facebook_logo" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/twitter_Logo"
                android:background="@drawable/ic_twitter_black"
                android:layout_above="@+id/linked_in"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/facebook_logo"
                android:background="@drawable/ic_facebook_black"
                android:layout_above="@+id/linked_in"
                android:layout_toStartOf="@+id/twitter_Logo" />

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.v7.widget.CardView>